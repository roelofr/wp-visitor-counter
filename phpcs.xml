<?xml version="1.0"?>
<ruleset xmlns="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
    <!-- Only check one file -->
    <file>plugin.php</file>

    <!-- We just use PSR-2, excluding one rule -->
    <rule ref="PSR2">
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
    </rule>

    <!-- Always enable the colours -->
    <arg name="colors"/>
</ruleset>
